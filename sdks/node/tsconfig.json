{
  "compilerOptions": {
    "target": "ES2020",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "outDir": "."
  },
  "include": [".", "alith/**/*"],
  "exclude": ["node_modules", "benchmark", "theme"]
}
